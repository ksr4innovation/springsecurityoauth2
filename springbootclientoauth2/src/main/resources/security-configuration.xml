<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.2.xsd">



    <beans:bean id="customUsernamePasswordFilter"
                class="com.snkit.springbootclientoauth2.CustomUsernamePasswordFilter">
       <beans:property name="authenticationManager" ref="authenticationManager"/>
    </beans:bean> 

	<authentication-manager alias="authenticationManager">
		<authentication-provider ref="customAuthenticationProvider" />
	</authentication-manager>

	<beans:bean id="customAuthenticationProvider"
                class="com.snkit.springbootclientoauth2.CustomAuthenticationProvider">
        <beans:property name="userDetailsService" ref="userService"/>
    </beans:bean> 
    
    <beans:bean id="userService"
                class="com.snkit.springbootclientoauth2.UserDetailsServiceImpl">
       
    </beans:bean>
    


</beans:beans>
